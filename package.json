    "eslint": "^9.26.0",
    "eslint-config-prettier": "^10.1.3",
    "jiti": "^2.4.2",
    "prettier": "3.5.3",
    "ts-node": "^10.9.2",
    "typescript": "^5.8.3",
    "typescript-eslint": "^8.32.0"
